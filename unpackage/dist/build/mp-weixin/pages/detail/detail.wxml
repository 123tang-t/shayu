<view class="detail"><view class="title"><view class="title-img"><image class="img" src="{{billdetail.touch_icon}}"></image></view><view class="desc">{{billdetail.tag_name}}</view></view><view class="detail-list"><view class="type"><text class="left">类型</text><text class="right">{{billdetail.type===0?'支出':'收入'}}</text></view><view class="money"><text class="left">金额</text><text class="right">{{billdetail.bill_amount}}</text></view><view class="date"><text class="left">日期</text><text class="right">{{billdetail.format_bill_time}}</text></view><view class="remark"><text class="left">备注</text><text class="right">{{billdetail.bill_note}}</text></view></view><view class="button-btn"><button class="btn" type="default" data-event-opts="{{[['tap',[['editdata',['$event']]]]]}}" bindtap="__e">编辑</button><button class="btn" type="default" data-event-opts="{{[['tap',[['delectdata',['$event']]]]]}}" bindtap="__e">删除</button></view></view>