.dialog-picker {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 999;
  background: rgba(0, 0, 0, 0.3);
}
.dialog-picker .picker {
  width: 100vw;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  background: #ffffff;
}
.dialog-picker .picker picker-view {
  height: 400rpx;
  margin: 60rpx 0 30rpx;
  padding: 0 40rpx;
}
.dialog-picker .picker picker-view picker-view-column {
  width: 33%;
}
.dialog-picker .picker picker-view .picker-list {
  text-align: center;
}
.dialog-picker .picker picker-view .picker-list .list-child {
  line-height: 34px;
}
.dialog-picker .picker .indicatorStyle {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-top: 2rpx solid #f4f5f5;
  border-bottom: 2rpx solid #f4f5f5;
}
.dialog-picker .picker .button-group {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin: 0rpx 0 30rpx;
  padding: 0 15%;
}
.dialog-picker .picker .button-group .cancel, .dialog-picker .picker .button-group .define {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  width: 35%;
  height: 70rpx;
  font-size: 24rpx;
}
.dialog-picker .picker .button-group .cancel {
  background: #f4f5f5;
}
.dialog-picker .picker .button-group .define {
  color: #ffffff;
}

