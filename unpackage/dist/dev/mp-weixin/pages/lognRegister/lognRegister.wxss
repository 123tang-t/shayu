.logn-register {
  height: 100vh;
  width: 100vw;
}
.logn-register .title {
  margin-top: 15rpx;
  padding: 0 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 45rpx;
  color: #000;
  font-weight: 500;
}
.logn-register .logn, .logn-register .register {
  padding: 15rpx 0;
}
.logn-register .logn .form .uni-input, .logn-register .register .form .uni-input {
  margin: 0 15rpx;
  height: 60rpx;
  font-size: 30rpx;
  border-radius: 10rpx;
  background: #f4f5f5;
}
.logn-register .logn .form .password, .logn-register .register .form .password {
  margin-top: 10rpx;
}
.logn-register .logn .form .verification, .logn-register .register .form .verification {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: flex;
          flex-direction: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin: 20rpx 15rpx 30rpx;
  height: 60rpx;
}
.logn-register .logn .form .verification .verification-desc, .logn-register .register .form .verification .verification-desc {
  padding: 10rpx 20rpx;
  width: 50%;
  font-size: 30rpx;
  background: #f4f5f5;
}
.logn-register .logn .form .verification .verification-img, .logn-register .register .form .verification .verification-img {
  width: 40%;
  margin-left: 30rpx;
  height: 80rpx;
}
.logn-register .logn .form .uni-btn-v .button, .logn-register .register .form .uni-btn-v .button {
  margin: 0 15rpx;
  background: #409EFF;
  border-radius: 20rpx;
}

